{
    "name": "DevSecOps Azure DevContainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/terraform:1.4.1": {},
        "ghcr.io/devcontainers/features/azure-cli:1.2.7": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2.12.3": {},
        "ghcr.io/devcontainers-extra/features/kubectl-asdf:2.0.16": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-azuretools.vscode-azureterraform",
                "ms-azuretools.vscode-azurecli"
            ]
        }
    }
}